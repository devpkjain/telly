<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devpkjain.telly"
    >

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="true"
      android:icon="@drawable/icon"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      android:name="com.devpkjain.telly.app.tellyApplication"
      >
    <activity
        android:name=".activity.SplashActivity"
        android:label="@string/app_name"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".activity.TrendingActivity"
        android:label="@string/title_trending"
        >

    </activity>
    <activity
        android:name=".activity.FullScheduleActivity"
        android:label="@string/title_trending"
        >
    </activity>
    <activity
        android:name=".activity.SearchActivity"
        android:label="@string/title_trending"
        >
    </activity>
    <activity
        android:name=".activity.ShowsActivity"
        android:label="@string/title_trending"
        >
    </activity>
    <activity
        android:name=".activity.BaseDrawerActivity"
        android:label="@string/app_name"
        >

    </activity>
    <activity
        android:name=".activity.DetailActivity"
        android:parentActivityName=".activity.BaseDrawerActivity"
        >
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".activity.BaseDrawerActivity"
          />
    </activity>
  </application>
</manifest>
