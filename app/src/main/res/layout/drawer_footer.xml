<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.4"/>
  <ImageView
      android:id="@+id/menu_trending"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_margin="4dp"
      android:layout_weight="1"
      android:background="@drawable/menu_trending_selector"/>
  <ImageView
      android:id="@+id/menu_full"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_margin="4dp"
      android:background="@drawable/menu_full_selector"/>
  <ImageView
      android:id="@+id/menu_search"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_margin="4dp"
      android:layout_weight="1"
      android:background="@drawable/menu_search_selector"/>
  <ImageView
      android:id="@+id/menu_favorite"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_margin="4dp"
      android:background="@drawable/menu_favorites_selector"/>
</LinearLayout>